// Place your key bindings in this file to overwrite the defaults
[
    { "key": "ctrl+alt+left",              "command": "workbench.action.navigateBack" },
    { "key": "ctrl+alt+right",             "command": "workbench.action.navigateForward" },
    
    { "key": "ctrl+f2",            "command": "bookmarks.toggle",
                                     "when": "editorTextFocus" },
    { "key": "f2",            "command": "bookmarks.jumpToNext",
                                     "when": "editorTextFocus" },

    { "key": "ctrl+r", "command": "workbench.action.debug.restart",
                        "when": "inDebugMode" },    
    { "key": "f7", "command": "workbench.action.tasks.runTask"},

    { "key": "alt+shift+s", "command": "workbench.action.showAllSymbols" },
    { "key": "alt+shift+o", "command": "workbench.action.quickOpen" },
    { "key": "alt+m", "command": "workbench.action.gotoSymbol" },
    { "key": "alt+g", "command": "editor.action.goToDeclaration",
                        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor" },

    { "key": "ctrl+numpad_add", "command": "editor.unfold",
                                "when": "editorTextFocus" },
    { "key": "ctrl+numpad_subtract", "command": "editor.fold",
                                    "when": "editorTextFocus" },
    { "key": "ctrl+shift+numpad_add", "command": "editor.unfoldAll",
                                    "when": "editorTextFocus" },
    { "key": "ctrl+shift+numpad_subtract", "command": "editor.foldLevel2",
                                            "when": "editorTextFocus" }
]